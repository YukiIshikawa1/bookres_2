    <% if @user_or_book == "1" %>
       <% if  @users.present? %>
     <h2>Users search for "<%= @search %>" </h2>
        <table class='table'>
              <tr>
                  <th></th>
                  <th>Name</th>
                  <th>User詳細</th>
              </tr>
          <% @users.each do |user| %>
              <tr>
                  <td>
                     <%= link_to user_path(user) do %>
                      <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                     <% end %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
          <% end %>
        </table>
       <% elsif %>
　       <h4>検索したデータはありませんでした。</h4>
       <% end %>

    <% elsif @user_or_book == "2" %>
    <% if  @books.present? %>
       <h2>Books search for "<%= @search %>" </h2>
         <table class='table'>
             <tr>
                 <th></th>
                 <th>Title</th>
                 <th>Opinion</th>
             </tr>
          <% @books.each do |book| %>
             <tr>
                 <td>
                    <%= link_to user_path(book.user) do %>
                      <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                    <% end %>
                 </td>
                 <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
                 <td><%= book.body %></td>
             </tr>
          <% end %>
           </table>
           
       <% elsif %>
　       <h4>検索した本はありませんでした。</h4>
       <% end %>
    <% end %>

