<table class='table'>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
      <% @user.follower_user.each do |user| %>
      <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
       <td>
         <%= user.name %>
       </td>
       <td><p>フォロー数：<%= user.follower_user.count %></p></td>
       <td><p>フォロワー数：<% user.followed_user.count %></p></td>
       <td>
         <%= link_to 'show', user_path(user) %>
       </td>
       </tr>
      <% end %>
</table>
