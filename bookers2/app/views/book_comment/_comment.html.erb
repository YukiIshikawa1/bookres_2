<table>
  <thead>
    <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
        <p>
        <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
        </p>
        <%=  book_comment.user.name %>
    <% end %>
     </td>
      <td>
       <%= book_comment.comment %>
      </td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book.id,book_comment.id), method: :delete, class:  "btn btn-sm btn-danger "  %>
        <% end %>
      </td>
　   </tr>
　 <% end %>
</table>

  <%= form_with(model:[@book,@comment],remote: true) do |f| %>
   <%= f.text_area :comment, placeholder: "コメントをここに", :size=>"100x7"  %>
   <%= f.submit "送信" %>
  <% end %>